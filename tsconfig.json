{
	"include": [
		"**/*",
		"**/.server/**/*",
		"**/.client/**/*",
		".react-router/types/**/*",
		".react-router/types/app/routes/**/*"
	],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2024"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"rootDirs": [
			".",
			"./.react-router/types",
			"./.react-router/types/routes/app/routes"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true
	}
}
